<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Music List</title>
  <style>
    body {
      font-family: 'Arial', sans-serif;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      min-height: 100vh;
      margin: 0;
      padding: 2rem;
      box-sizing: border-box;
    }

    .container {
      background-color: white;
      padding: 2rem;
      border-radius: 10px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      max-width: 800px;
      margin: 0 auto;
    }

    h1 {
      color: #4a5568;
      text-align: center;
      margin-bottom: 1.5rem;
    }

    ul {
      list-style-type: none;
      padding: 0;
    }

    li {
      background-color: #f7fafc;
      border: 1px solid #e2e8f0;
      border-radius: 4px;
      padding: 1rem;
      margin-bottom: 1rem;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .title {
      font-weight: bold;
      color: #2d3748;
    }

    .actions {
      display: flex;
      gap: 0.5rem;
    }

    button {
      background-color: #4299e1;
      color: white;
      padding: 0.5rem 1rem;
      border: none;
      border-radius: 4px;
      font-size: 0.875rem;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    button:hover {
      background-color: #3182ce;
    }

    .delete-btn {
      background-color: #e53e3e;
    }

    .delete-btn:hover {
      background-color: #c53030;
    }

    .upload-link {
      display: block;
      text-align: center;
      margin-top: 1rem;
      font-size: 1rem;
      color: #4299e1;
      text-decoration: none;
    }

    .upload-link:hover {
      text-decoration: underline;
    }

    #audioPlayer {
      width: 100%;
      margin-top: 1rem;
    }

    #message {
      text-align: center;
      margin-top: 1rem;
      padding: 0.5rem;
      border-radius: 4px;
    }

    .success {
      background-color: #c6f6d5;
      color: #2f855a;
    }

    .error {
      background-color: #fed7d7;
      color: #9b2c2c;
    }
  </style>
</head>

<body>
  <div class="container">
    <h1>Music List</h1>
    <ul id="musicList">
      <% music.forEach(function(item) { %>
      <li data-id="<%= item.id %>">
        <span class="title"><%= item.title %></span>
        <div class="actions">
          <button onclick="playAudio('/<%= item.filePath %>', '<%= item.title %>')">Play</button>
          <button onclick="deleteMusic('<%= item.id %>')" class="delete-btn">Delete</button>
        </div>
      </li>
      <% }); %>
    </ul>
    <audio id="audioPlayer" controls style="display: none;"></audio>
    <p id="nowPlaying" style="text-align: center; margin-top: 1rem;"></p>
    <div id="message"></div>
    <a href="/music/upload?login=Hadmin&pass=luxC2024" class="upload-link">Upload New Music</a>
  </div>

  <script>
    const audioPlayer = document.getElementById('audioPlayer');
    const nowPlaying = document.getElementById('nowPlaying');
    const messageDiv = document.getElementById('message');

    function playAudio(src, title) {
      audioPlayer.src = src;
      audioPlayer.style.display = 'block';
      audioPlayer.play();
      nowPlaying.textContent = `Now playing: ${title}`;
    }

    audioPlayer.addEventListener('ended', function() {
      nowPlaying.textContent = '';
    });

    function deleteMusic(id) {
      if (confirm('Are you sure you want to delete this music?')) {
        fetch(`/music/${id}?login=Hadmin&pass=luxC2024`, {
            method: 'DELETE',
          })
          .then(response => {
            if (!response.ok) {
              throw new Error('Failed to delete music');
            }
            return response.json();
          })
          .then(data => {
            const listItem = document.querySelector(`li[data-id="${id}"]`);
            if (listItem) {
              listItem.remove();
            }
            showMessage('Music deleted successfully', 'success');
          })
          .catch(error => {
            console.error('Error:', error);
            showMessage('Failed to delete music', 'error');
          });
      }
    }

    function showMessage(text, type) {
      messageDiv.textContent = text;
      messageDiv.className = type;
      setTimeout(() => {
        messageDiv.textContent = '';
        messageDiv.className = '';
      }, 3000);
    }
  </script>
</body>

</html>